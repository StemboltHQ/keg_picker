= link_to "< Back", root_path

%h1 Beer list
%table.table.table-striped
  %tbody
    %tr
      %th
        Beer
      %th
        Brewery
      - if can?(:manage, :all)
        %th
        %th
  -@beers.each do |beer|
    %tr
      %td= beer.name
      %td= beer.brewery
      - if can?(:manage, :all)
        %td
          = link_to "Delete", beer_path(beer), method: :delete, data: { confirm: "Are you sure you want to delete this beer?" }
        %td
          = link_to "Edit", edit_beer_path(beer)
