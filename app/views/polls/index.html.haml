= link_to "Back", beers_path

%h1 Poll history
=link_to "Create a poll", polls_path, method: :post, :class => "btn btn-lg btn-default"

%table.table.table-striped
  %tbody
    %tr
      %th
        Winner
      %th
        Start date
      %th
        Active
      %th
      %th
      %th
      %th
    -@polls.each do |poll|
      %tr
        %td
          #{ poll.winner.try!(:brand) }
        %td
          #{ poll.created_at }
        %td
          #{ !poll.closed }
        %td
          =link_to "Delete", poll_path(poll), method: :delete, data: { confirm: "Are you sure you want to delete this poll?" }
        %td
          =link_to "Close", poll_path(id: poll.id, closed: true, ended_at: Time.now), method: :patch
        %td
          =link_to "Reopen", poll_path(id: poll.id, closed: false), method: :patch
        %td
          =link_to "Finalize", poll_finalize_path(poll_id: poll.id), method: :patch
