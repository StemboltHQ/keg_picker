= link_to "< Back", root_path

%h1 Beer list
%table.table.table-striped
  %tbody
    %tr
      %th Beer
      %th Brewery
      %th
      %th
  -@beers.each do |beer|
    %tr
      %td= "#{beer.display_name}"
      %td= "#{beer.brewery}"
      %td
        - if can? :delete, beer
          = link_to "Delete", beer_path(beer), method: :delete, data: { confirm: "Are you sure you want to delete this beer?" }
      %td
        - if can? :edit, beer
          = link_to "Edit", edit_beer_path(beer)
