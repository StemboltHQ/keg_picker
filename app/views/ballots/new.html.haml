%h1 Vote for your favourite beer

= render "errors/error_messages", object: @ballot

= form_tag(ballots_path, method: :post) do
  = select_tag "beer_id", options_from_collection_for_select(@beers, "id", "brand"), class: "form-control"

  .action-links
    = submit_tag "Voote", class: "btn btn-lg btn-default"
    = link_to "Back", root_path, class: "btn btn-lg btn-default pull-right"
